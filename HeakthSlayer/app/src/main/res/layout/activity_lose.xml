<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoseActivity"
    android:orientation="vertical"
    android:background="@color/background">
    <TextView
        android:textSize="50sp"
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="GAME OVER!"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/textColor"
        android:layout_weight="1"/>
    <TextView
        tools:text="123"
        android:textColor="@color/textColor"
        android:id="@+id/highest_score"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_below="@+id/game_over"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/score"
        android:layout_below="@+id/highest_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        tools:text="score"
        android:layout_weight="1"
        android:textColor="@color/textColor"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/restart"
            android:src="@drawable/ic_restart_svgrepo_com"
            android:background="@color/background"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_weight="1"
            android:backgroundTint="@color/background"
            android:id="@+id/maim_menu"
            android:src="@drawable/ic_exit_svgrepo_com"
            android:background="@color/background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </LinearLayout>







</LinearLayout>